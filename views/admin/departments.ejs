<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Departments - Admin</title>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
    <link rel="shortcut icon" type="image/png" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/modern-dashboard.css">
    <style>
        body { background: #F8FAFC; font-family: 'Inter', sans-serif; }
        .dept-card { background: white; border-radius: 1rem; padding: 1.5rem; margin-bottom: 1rem; box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1); border: 1px solid #E2E8F0; transition: all 0.3s; }
        .dept-card:hover { transform: translateY(-4px); box-shadow: 0 10px 25px rgba(59, 130, 246, 0.1); }
    </style>
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <div class="modern-dashboard">
        <aside class="sidebar">
            <div class="sidebar-header"><div class="sidebar-logo"><i class="fas fa-heartbeat"></i></div><div><h2 class="sidebar-title">Bizil Health</h2></div></div>
            <nav><ul class="nav-menu">
                <li class="nav-item"><a href="/admin/dashboard" class="nav-link"><i class="fas fa-home nav-icon"></i><span>Dashboard</span></a></li>
                <li class="nav-item"><a href="/admin/patients" class="nav-link"><i class="fas fa-users nav-icon"></i><span>Patients</span></a></li>
                <li class="nav-item"><a href="/admin/doctors" class="nav-link"><i class="fas fa-user-md nav-icon"></i><span>Doctors</span></a></li>
                <li class="nav-item"><a href="/admin/appointments" class="nav-link"><i class="fas fa-calendar-check nav-icon"></i><span>Appointments</span></a></li>
                <li class="nav-item"><a href="/admin/departments" class="nav-link active"><i class="fas fa-hospital nav-icon"></i><span>Departments</span></a></li>
                <li class="nav-item"><a href="/admin/health-tips" class="nav-link"><i class="fas fa-lightbulb nav-icon"></i><span>Health Tips</span></a></li>
                <li class="nav-item"><a href="/admin/reports" class="nav-link"><i class="fas fa-chart-line nav-icon"></i><span>Reports</span></a></li>
                <li class="nav-item"><a href="/admin/settings" class="nav-link"><i class="fas fa-cog nav-icon"></i><span>Settings</span></a></li>
                <li class="nav-item" style="margin-top: 2rem;"><a href="/patient/logout" class="nav-link" style="color: #EF4444;"><i class="fas fa-sign-out-alt nav-icon"></i><span>Logout</span></a></li>
            </ul></nav>
        </aside>

        <main class="main-content">
            <header class="dashboard-header">
                <div class="welcome-section"><div style="display: flex; align-items: center; gap: 1rem;"><button class="mobile-menu-toggle" id="mobileMenuToggle"><i class="fas fa-bars"></i></button><div><h1>Departments</h1><p style="margin: 0;">Medical departments overview</p></div></div></div>
                <div class="header-actions"><div class="user-profile"><div class="user-avatar" style="background: linear-gradient(135deg, #8B5CF6, #6366F1);"><%= user.username.charAt(0).toUpperCase() %></div><div class="user-info"><div class="user-name"><%= user.username %></div><div class="user-role">Administrator</div></div></div></div>
            </header>

            <% if (successMessage) { %><div class="alert alert-success alert-dismissible fade show"><i class="fas fa-check-circle"></i> <%= successMessage %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div><% } %>
            <% if (errorMessage) { %><div class="alert alert-danger alert-dismissible fade show"><i class="fas fa-exclamation-circle"></i> <%= errorMessage %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div><% } %>

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem;">
                <% if (departments && departments.length > 0) { %>
                    <% departments.forEach(dept => { %>
                        <div class="dept-card">
                            <h3 style="font-size: 1.25rem; font-weight: 600; color: #1E293B; margin-bottom: 1rem;"><i class="fas fa-hospital"></i> <%= dept._id %></h3>
                            <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                <span style="color: #64748B;">Doctors:</span>
                                <span style="font-weight: 600; color: #1E293B;"><%= dept.doctorCount %></span>
                            </div>
                            <div style="display: flex; justify-content: space-between;">
                                <span style="color: #64748B;">Avg Experience:</span>
                                <span style="font-weight: 600; color: #1E293B;"><%= Math.round(dept.avgExperience) %> years</span>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div style="grid-column: 1 / -1; text-align: center; padding: 3rem; color: #94A3B8;"><i class="fas fa-hospital" style="font-size: 3rem; margin-bottom: 1rem; display: block; color: #CBD5E1;"></i><p>No departments found</p></div>
                <% } %>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const sidebar = document.querySelector('.sidebar');
        const overlay = document.getElementById('sidebarOverlay');
        if (mobileMenuToggle) mobileMenuToggle.addEventListener('click', () => { sidebar.classList.toggle('active'); overlay.classList.toggle('active'); });
        if (overlay) overlay.addEventListener('click', () => { sidebar.classList.remove('active'); overlay.classList.remove('active'); });
    </script>
</body>
</html>
