<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Tips Management - Admin</title>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
    <link rel="shortcut icon" type="image/png" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/modern-dashboard.css">
    <style>
        body { background: #F8FAFC; font-family: 'Inter', sans-serif; }
        .filter-section, .tips-container { background: white; border-radius: 1rem; padding: 1.5rem; margin-bottom: 1.5rem; box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1); border: 1px solid #E2E8F0; }
        .stats-row { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 1.5rem; }
        .stat-box { background: white; border-radius: 1rem; padding: 1.25rem; box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1); border: 1px solid #E2E8F0; text-align: center; }
        .stat-box h3 { font-size: 2rem; font-weight: 700; color: #1E293B; margin-bottom: 0.25rem; }
        .stat-box p { font-size: 0.875rem; color: #64748B; margin: 0; }
        .tip-card { background: #F8FAFC; border-radius: 0.75rem; padding: 1.25rem; margin-bottom: 0.75rem; transition: all 0.2s; }
        .tip-card:hover { background: #F1F5F9; }
        .badge { padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600; }
        .badge-published { background: rgba(16, 185, 129, 0.1); color: #10B981; }
        .badge-draft { background: rgba(245, 158, 11, 0.1); color: #F59E0B; }
        .btn-action { padding: 0.5rem 0.75rem; border-radius: 0.5rem; border: none; font-size: 0.875rem; font-weight: 500; cursor: pointer; transition: all 0.2s; margin-right: 0.5rem; }
    </style>
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <div class="modern-dashboard">
        <aside class="sidebar">
            <div class="sidebar-header"><div class="sidebar-logo"><i class="fas fa-heartbeat"></i></div><div><h2 class="sidebar-title">Bizil Health</h2></div></div>
            <nav><ul class="nav-menu">
                <li class="nav-item"><a href="/admin/dashboard" class="nav-link"><i class="fas fa-home nav-icon"></i><span>Dashboard</span></a></li>
                <li class="nav-item"><a href="/admin/patients" class="nav-link"><i class="fas fa-users nav-icon"></i><span>Patients</span></a></li>
                <li class="nav-item"><a href="/admin/doctors" class="nav-link"><i class="fas fa-user-md nav-icon"></i><span>Doctors</span></a></li>
                <li class="nav-item"><a href="/admin/appointments" class="nav-link"><i class="fas fa-calendar-check nav-icon"></i><span>Appointments</span></a></li>
                <li class="nav-item"><a href="/admin/departments" class="nav-link"><i class="fas fa-hospital nav-icon"></i><span>Departments</span></a></li>
                <li class="nav-item"><a href="/admin/health-tips" class="nav-link active"><i class="fas fa-lightbulb nav-icon"></i><span>Health Tips</span></a></li>
                <li class="nav-item"><a href="/admin/reports" class="nav-link"><i class="fas fa-chart-line nav-icon"></i><span>Reports</span></a></li>
                <li class="nav-item"><a href="/admin/settings" class="nav-link"><i class="fas fa-cog nav-icon"></i><span>Settings</span></a></li>
                <li class="nav-item" style="margin-top: 2rem;"><a href="/patient/logout" class="nav-link" style="color: #EF4444;"><i class="fas fa-sign-out-alt nav-icon"></i><span>Logout</span></a></li>
            </ul></nav>
        </aside>

        <main class="main-content">
            <header class="dashboard-header">
                <div class="welcome-section"><div style="display: flex; align-items: center; gap: 1rem;"><button class="mobile-menu-toggle" id="mobileMenuToggle"><i class="fas fa-bars"></i></button><div><h1 style="margin-bottom: 0.25rem;">Health Tips Management</h1><p style="margin: 0;">Manage and publish health tips</p></div></div></div>
                <div class="header-actions"><div class="user-profile"><div class="user-avatar" style="background: linear-gradient(135deg, #8B5CF6, #6366F1);"><%= user && user.username ? user.username.charAt(0).toUpperCase() : 'A' %></div><div class="user-info"><div class="user-name"><%= user && user.username ? user.username : 'Admin' %></div><div class="user-role">Administrator</div></div></div></div>
            </header>

            <% if (successMessage) { %><div class="alert alert-success alert-dismissible fade show"><i class="fas fa-check-circle"></i> <%= successMessage %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div><% } %>
            <% if (errorMessage) { %><div class="alert alert-danger alert-dismissible fade show"><i class="fas fa-exclamation-circle"></i> <%= errorMessage %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div><% } %>

            <div class="stats-row">
                <div class="stat-box"><h3><%= totalTips %></h3><p>Total Tips</p></div>
                <div class="stat-box"><h3><%= publishedCount %></h3><p>Published</p></div>
                <div class="stat-box"><h3><%= draftCount %></h3><p>Drafts</p></div>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <a href="/admin/health-tips/create" class="btn-primary"><i class="fas fa-plus"></i> Create New Health Tip</a>
            </div>

            <div class="filter-section">
                <form method="GET" action="/admin/health-tips" style="display: grid; grid-template-columns: 2fr 1fr 1fr 1fr; gap: 1rem;">
                    <div><label style="font-size: 0.875rem; font-weight: 600; color: #1E293B; display: block; margin-bottom: 0.5rem;">Search</label><input type="text" name="search" class="form-control" placeholder="Search tips..." value="<%= filters.search || '' %>"></div>
                    <div><label style="font-size: 0.875rem; font-weight: 600; color: #1E293B; display: block; margin-bottom: 0.5rem;">Category</label><select name="category" class="form-select"><option value="all">All Categories</option><% categories.forEach(cat => { %><option value="<%= cat %>" <%= filters.category === cat ? 'selected' : '' %>><%= cat %></option><% }); %></select></div>
                    <div><label style="font-size: 0.875rem; font-weight: 600; color: #1E293B; display: block; margin-bottom: 0.5rem;">Status</label><select name="status" class="form-select"><option value="all">All Status</option><option value="published" <%= filters.status === 'published' ? 'selected' : '' %>>Published</option><option value="draft" <%= filters.status === 'draft' ? 'selected' : '' %>>Draft</option></select></div>
                    <div><label style="font-size: 0.875rem; font-weight: 600; color: #1E293B; display: block; margin-bottom: 0.5rem;">Sort By</label><select name="sortBy" class="form-select" onchange="this.form.submit()"><option value="newest">Newest First</option><option value="oldest" <%= filters.sortBy === 'oldest' ? 'selected' : '' %>>Oldest First</option><option value="title" <%= filters.sortBy === 'title' ? 'selected' : '' %>>Title (A-Z)</option></select></div>
                </form>
                <button type="submit" class="btn-primary" style="margin-top: 1rem;" onclick="this.previousElementSibling.submit()"><i class="fas fa-search"></i> Apply Filters</button>
            </div>

            <div class="tips-container">
                <h2 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 1.5rem;"><i class="fas fa-lightbulb"></i> All Health Tips (<%= healthTips.length %>)</h2>
                <% if (healthTips && healthTips.length > 0) { %>
                    <% healthTips.forEach(tip => { %>
                        <div class="tip-card">
                            <div style="display: flex; justify-content: space-between; align-items: start; gap: 1rem;">
                                <div style="flex: 1;">
                                    <div style="font-weight: 600; font-size: 1.125rem; color: #1E293B; margin-bottom: 0.5rem;"><%= tip.title %></div>
                                    <div style="font-size: 0.875rem; color: #64748B; margin-bottom: 0.75rem; line-height: 1.6;"><%= tip.content ? tip.content.substring(0, 150) : '' %>...</div>
                                    <div style="display: flex; gap: 1rem; align-items: center;">
                                        <span style="font-size: 0.875rem; color: #64748B;"><i class="fas fa-tag"></i> <%= tip.category || 'General' %></span>
                                        <span style="font-size: 0.875rem; color: #64748B;"><i class="fas fa-calendar"></i> <%= tip.createdAt ? new Date(tip.createdAt).toLocaleDateString() : 'N/A' %></span>
                                        <span class="badge badge-<%= tip.status %>"><%= tip.status.charAt(0).toUpperCase() + tip.status.slice(1) %></span>
                                    </div>
                                </div>
                                <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                                    <form method="POST" action="/admin/health-tips/toggle-status/<%= tip._id %>">
                                        <button type="submit" class="btn-action" style="background: <%= tip.status === 'published' ? 'rgba(245, 158, 11, 0.1)' : 'rgba(16, 185, 129, 0.1)' %>; color: <%= tip.status === 'published' ? '#F59E0B' : '#10B981' %>; width: 100%;"><i class="fas <%= tip.status === 'published' ? 'fa-eye-slash' : 'fa-eye' %>"></i> <%= tip.status === 'published' ? 'Unpublish' : 'Publish' %></button>
                                    </form>
                                    <form method="POST" action="/admin/health-tips/delete/<%= tip._id %>" onsubmit="return confirm('Delete this health tip?');">
                                        <button type="submit" class="btn-action" style="background: rgba(239, 68, 68, 0.1); color: #EF4444; width: 100%;"><i class="fas fa-trash"></i> Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div style="text-align: center; padding: 3rem; color: #94A3B8;"><i class="fas fa-lightbulb" style="font-size: 3rem; margin-bottom: 1rem; display: block; color: #CBD5E1;"></i><p>No health tips found</p></div>
                <% } %>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const sidebar = document.querySelector('.sidebar');
        const overlay = document.getElementById('sidebarOverlay');
        if (mobileMenuToggle) mobileMenuToggle.addEventListener('click', () => { sidebar.classList.toggle('active'); overlay.classList.toggle('active'); });
        if (overlay) overlay.addEventListener('click', () => { sidebar.classList.remove('active'); overlay.classList.remove('active'); });
    </script>
</body>
</html>
