<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Appointments - Bizil Health Care</title>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
    <link rel="shortcut icon" type="image/png" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.1/css/all.css" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/modern-dashboard.css">
    <style>
        body {
            background: #F8FAFC;
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            margin: 0;
            overflow-x: hidden;
            overflow-y: auto;
        }
        
        html {
            overflow-y: auto;
            overflow-x: hidden;
        }
        
        .modern-dashboard {
            min-height: 100vh;
            width: 100%;
            height: auto;
        }
        
        .main-content {
            min-height: 100vh;
            height: auto;
            box-sizing: border-box;
            position: relative;
            z-index: 1;
            max-width: 100%;
        }
        
        /* Mobile Menu Toggle Button */
        .mobile-menu-toggle {
            display: none;
            width: 40px;
            height: 40px;
            border-radius: 0.5rem;
            border: 1px solid #E2E8F0;
            background: white;
            cursor: pointer;
            transition: all 0.3s ease;
            align-items: center;
            justify-content: center;
            pointer-events: auto;
            z-index: 1002;
            position: relative;
        }
        
        .mobile-menu-toggle:hover {
            background: #F8FAFC;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        
        .mobile-menu-toggle i {
            font-size: 1.25rem;
            color: #1E293B;
        }
        
        /* Mobile Sidebar Overlay */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
        }
        
        .sidebar-overlay.active {
            opacity: 1;
            pointer-events: auto;
        }
        
        /* Quick Actions */
        .quick-actions {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }
        
        .action-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1.5rem;
            border-radius: 0.75rem;
            font-weight: 600;
            font-size: 0.875rem;
            text-decoration: none;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
        }
        
        .action-btn.primary {
            background: linear-gradient(135deg, #8B5CF6, #6D28D9);
            color: white;
        }
        
        .action-btn.primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(139, 92, 246, 0.4);
            color: white;
        }
        
        .action-btn.secondary {
            background: linear-gradient(135deg, #3B82F6, #2563EB);
            color: white;
        }
        
        .action-btn.secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(59, 130, 246, 0.4);
            color: white;
        }
        
        /* Filter Tabs */
        .filter-tabs {
            display: flex;
            gap: 0.75rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            background: white;
            padding: 1rem;
            border-radius: 1rem;
            border: 1px solid #E2E8F0;
        }
        
        .filter-tab {
            padding: 0.625rem 1.25rem;
            border-radius: 0.5rem;
            border: 1px solid #E2E8F0;
            background: white;
            color: #64748B;
            font-weight: 600;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
        }
        
        .filter-tab:hover {
            background: #F8FAFC;
            color: #1E293B;
        }
        
        .filter-tab.active {
            background: linear-gradient(135deg, #8B5CF6, #6D28D9);
            color: white;
            border-color: #8B5CF6;
        }
        
        /* Appointment Card */
        .appointment-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            margin-bottom: 1rem;
            border: 1px solid #E2E8F0;
            box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            transition: all 0.3s ease;
        }
        
        .appointment-card:hover {
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            transform: translateY(-2px);
        }
        
        .appointment-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #E2E8F0;
        }
        
        .doctor-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .doctor-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #8B5CF6, #6D28D9);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            font-weight: 600;
        }
        
        .doctor-details h3 {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1E293B;
            margin-bottom: 0.25rem;
        }
        
        .doctor-specialization {
            color: #8B5CF6;
            font-size: 0.875rem;
            font-weight: 500;
        }
        
        .status-badge {
            padding: 0.375rem 0.875rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }
        
        .status-badge.scheduled {
            background: rgba(59, 130, 246, 0.1);
            color: #3B82F6;
        }
        
        .status-badge.confirmed {
            background: rgba(16, 185, 129, 0.1);
            color: #10B981;
        }
        
        .status-badge.completed {
            background: rgba(139, 92, 246, 0.1);
            color: #8B5CF6;
        }
        
        .status-badge.cancelled {
            background: rgba(239, 68, 68, 0.1);
            color: #EF4444;
        }
        
        .appointment-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1rem;
            margin-bottom: 1rem;
        }
        
        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .detail-icon {
            width: 40px;
            height: 40px;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }
        
        .detail-icon.purple {
            background: rgba(139, 92, 246, 0.1);
            color: #8B5CF6;
        }
        
        .detail-icon.blue {
            background: rgba(59, 130, 246, 0.1);
            color: #3B82F6;
        }
        
        .detail-icon.pink {
            background: rgba(236, 72, 153, 0.1);
            color: #EC4899;
        }
        
        .detail-content {
            flex: 1;
        }
        
        .detail-label {
            color: #64748B;
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        
        .detail-value {
            color: #1E293B;
            font-weight: 600;
            font-size: 0.875rem;
            margin-top: 0.125rem;
        }
        
        .appointment-actions {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #E2E8F0;
        }
        
        .btn-action {
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-action.reschedule {
            background: rgba(59, 130, 246, 0.1);
            color: #3B82F6;
        }
        
        .btn-action.reschedule:hover {
            background: rgba(59, 130, 246, 0.2);
        }
        
        .btn-action.cancel {
            background: rgba(239, 68, 68, 0.1);
            color: #EF4444;
        }
        
        .btn-action.cancel:hover {
            background: rgba(239, 68, 68, 0.2);
        }
        
        .btn-action.view {
            background: rgba(139, 92, 246, 0.1);
            color: #8B5CF6;
        }
        
        .btn-action.view:hover {
            background: rgba(139, 92, 246, 0.2);
        }
        
        .no-appointments {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 1.5rem;
            border: 2px dashed #E2E8F0;
        }
        
        .no-appointments i {
            font-size: 4rem;
            color: #CBD5E1;
            margin-bottom: 1rem;
        }
        
        .no-appointments h3 {
            color: #1E293B;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .no-appointments p {
            color: #64748B;
            margin-bottom: 1.5rem;
        }
        
        @media (max-width: 1200px) {
            .modern-dashboard {
                grid-template-columns: 1fr;
            }
            
            .mobile-menu-toggle {
                display: flex;
            }
            
            .sidebar-overlay {
                display: none;
            }
            
            .sidebar-overlay.active {
                display: block;
            }
            
            .sidebar {
                position: fixed;
                left: 0;
                top: 0;
                width: 280px;
                height: 100vh;
                z-index: 1000;
                transform: translateX(-100%);
                transition: transform 0.3s ease;
                box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
            }
            
            .sidebar.mobile-visible {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
                width: 100%;
            }
        }
        
        @media (max-width: 768px) {
            .appointment-details {
                grid-template-columns: 1fr;
            }
            
            .doctor-info {
                flex-direction: column;
                text-align: center;
            }
            
            .appointment-header {
                flex-direction: column;
                align-items: center;
                text-align: center;
                gap: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    
    <!-- Modern Dashboard Layout -->
    <div class="modern-dashboard">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <i class="fas fa-heartbeat"></i>
                </div>
                <div>
                    <h2 class="sidebar-title">Bizil Health</h2>
                </div>
            </div>
            
            <nav>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/patient/dashboard" class="nav-link">
                            <i class="fas fa-home nav-icon"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/patient/appointments" class="nav-link active">
                            <i class="fas fa-calendar-alt nav-icon"></i>
                            <span>Appointments</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/patient/search-doctors" class="nav-link">
                            <i class="fas fa-user-md nav-icon"></i>
                            <span>Find Doctors</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/patient/test-results" class="nav-link">
                            <i class="fas fa-flask nav-icon"></i>
                            <span>Test Results</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/patient/prescriptions" class="nav-link">
                            <i class="fas fa-pills nav-icon"></i>
                            <span>Prescriptions</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/patient/health-tips" class="nav-link">
                            <i class="fas fa-lightbulb nav-icon"></i>
                            <span>Health Tips</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/patient/complete-profile" class="nav-link">
                            <i class="fas fa-user-edit nav-icon"></i>
                            <span>My Profile</span>
                        </a>
                    </li>
                    <li class="nav-item" style="margin-top: 2rem;">
                        <a href="/patient/logout" class="nav-link" style="color: #EF4444;">
                            <i class="fas fa-sign-out-alt nav-icon"></i>
                            <span>Logout</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        
        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Header -->
            <header class="dashboard-header">
                <div class="welcome-section">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle Menu">
                            <i class="fas fa-bars"></i>
                        </button>
                        <div>
                            <h1 style="margin-bottom: 0.25rem;"><i class="fas fa-calendar-alt"></i> My Appointments</h1>
                            <p style="margin: 0;">Manage your healthcare appointments and schedules</p>
                        </div>
                    </div>
                </div>
                
                <div class="header-actions">
                    <div class="user-profile">
                        <div class="user-avatar">
                            <%= (user && user.username) ? user.username.charAt(0).toUpperCase() : 'P' %>
                        </div>
                        <div class="user-info">
                            <div class="user-name"><%= (user && user.username) ? user.username : 'Patient' %></div>
                            <div class="user-role">Patient</div>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Quick Actions -->
            <div class="quick-actions">
                <a href="/patient/book-appointment" class="action-btn primary">
                    <i class="fas fa-plus"></i>
                    Book New Appointment
                </a>
                <a href="/patient/search-doctors" class="action-btn secondary">
                    <i class="fas fa-search"></i>
                    Find Doctors
                </a>
            </div>
            
            <!-- Filter Tabs -->
            <div class="filter-tabs">
                <a href="/patient/appointments" class="filter-tab <%= !filter || filter === 'all' ? 'active' : '' %>">
                    <i class="fas fa-list"></i> All Appointments
                </a>
                <a href="/patient/appointments?filter=scheduled" class="filter-tab <%= filter === 'scheduled' ? 'active' : '' %>">
                    <i class="fas fa-clock"></i> Scheduled
                </a>
                <a href="/patient/appointments?filter=confirmed" class="filter-tab <%= filter === 'confirmed' ? 'active' : '' %>">
                    <i class="fas fa-check-circle"></i> Confirmed
                </a>
                <a href="/patient/appointments?filter=completed" class="filter-tab <%= filter === 'completed' ? 'active' : '' %>">
                    <i class="fas fa-check-double"></i> Completed
                </a>
                <a href="/patient/appointments?filter=cancelled" class="filter-tab <%= filter === 'cancelled' ? 'active' : '' %>">
                    <i class="fas fa-times-circle"></i> Cancelled
                </a>
            </div>
            
            <!-- Appointments List -->
            <% if (appointments && appointments.length > 0) { %>
                <% appointments.forEach(function(appointment) { %>
                    <div class="appointment-card">
                        <div class="appointment-header">
                            <div class="doctor-info">
                                <div class="doctor-avatar">
                                    <%= appointment.doctor ? appointment.doctor.firstName.charAt(0) + appointment.doctor.lastName.charAt(0) : 'DR' %>
                                </div>
                                <div class="doctor-details">
                                    <h3>Dr. <%= appointment.doctor ? appointment.doctor.firstName + ' ' + appointment.doctor.lastName : 'Unknown' %></h3>
                                    <div class="doctor-specialization">
                                        <i class="fas fa-stethoscope"></i>
                                        <%= appointment.doctor && appointment.doctor.specialization ? appointment.doctor.specialization : 'General Practice' %>
                                    </div>
                                </div>
                            </div>
                            <span class="status-badge <%= appointment.status || 'scheduled' %>">
                                <%= appointment.status ? appointment.status : 'Scheduled' %>
                            </span>
                        </div>
                        
                        <div class="appointment-details">
                            <div class="detail-item">
                                <div class="detail-icon purple">
                                    <i class="fas fa-calendar"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Date</div>
                                    <div class="detail-value">
                                        <%= appointment.appointmentDate ? new Date(appointment.appointmentDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) : 'N/A' %>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="detail-item">
                                <div class="detail-icon blue">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Time</div>
                                    <div class="detail-value"><%= appointment.appointmentTime || 'N/A' %></div>
                                </div>
                            </div>
                            
                            <div class="detail-item">
                                <div class="detail-icon pink">
                                    <i class="fas fa-notes-medical"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Type</div>
                                    <div class="detail-value"><%= appointment.appointmentType || 'Consultation' %></div>
                                </div>
                            </div>
                            
                            <% if (appointment.doctor && appointment.doctor.currentHospital && appointment.doctor.currentHospital.name) { %>
                            <div class="detail-item">
                                <div class="detail-icon purple">
                                    <i class="fas fa-hospital"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Hospital</div>
                                    <div class="detail-value"><%= appointment.doctor.currentHospital.name %></div>
                                </div>
                            </div>
                            <% } %>
                            
                            <% if (appointment.doctor && appointment.doctor.address && (appointment.doctor.address.city || appointment.doctor.address.state)) { %>
                            <div class="detail-item">
                                <div class="detail-icon blue">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Location</div>
                                    <div class="detail-value">
                                        <% if (appointment.doctor.address.street) { %><%= appointment.doctor.address.street %>, <% } %>
                                        <% if (appointment.doctor.address.city) { %><%= appointment.doctor.address.city %><% } %>
                                        <% if (appointment.doctor.address.city && appointment.doctor.address.state) { %>, <% } %>
                                        <% if (appointment.doctor.address.state) { %><%= appointment.doctor.address.state %><% } %>
                                        <% if (appointment.doctor.address.pincode) { %> - <%= appointment.doctor.address.pincode %><% } %>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        
                        <% if (appointment.reason) { %>
                        <div style="margin-top: 1rem; padding: 1rem; background: #F8FAFC; border-radius: 0.5rem;">
                            <div style="color: #64748B; font-size: 0.75rem; text-transform: uppercase; font-weight: 600; margin-bottom: 0.5rem;">
                                <i class="fas fa-info-circle"></i> Reason for Visit
                            </div>
                            <div style="color: #1E293B; font-size: 0.875rem;">
                                <%= appointment.reason %>
                            </div>
                        </div>
                        <% } %>
                        
                        <div class="appointment-actions">
                            <% if (appointment.status === 'scheduled' || appointment.status === 'confirmed') { %>
                                <a href="/patient/appointments/<%= appointment._id %>/reschedule" class="btn-action reschedule">
                                    <i class="fas fa-calendar-alt"></i>
                                    Reschedule
                                </a>
                                <form method="POST" action="/patient/appointments/<%= appointment._id %>/cancel" style="display: inline;">
                                    <button type="submit" class="btn-action cancel" onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                        <i class="fas fa-times"></i>
                                        Cancel
                                    </button>
                                </form>
                            <% } %>
                            <a href="/patient/appointments/<%= appointment._id %>" class="btn-action view">
                                <i class="fas fa-eye"></i>
                                View Details
                            </a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-appointments">
                    <i class="fas fa-calendar-times"></i>
                    <h3>No Appointments Found</h3>
                    <p>You don't have any <%= filter && filter !== 'all' ? filter : '' %> appointments at the moment.</p>
                    <a href="/patient/book-appointment" class="action-btn primary">
                        <i class="fas fa-plus"></i>
                        Book Your First Appointment
                    </a>
                </div>
            <% } %>
        </main>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Mobile Menu Toggle Functionality
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const sidebar = document.querySelector('.sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        const navLinks = document.querySelectorAll('.nav-link');
        
        function toggleMenu() {
            sidebar.classList.toggle('mobile-visible');
            sidebarOverlay.classList.toggle('active');
            
            const icon = mobileMenuToggle.querySelector('i');
            if (sidebar.classList.contains('mobile-visible')) {
                icon.classList.remove('fa-bars');
                icon.classList.add('fa-times');
            } else {
                icon.classList.remove('fa-times');
                icon.classList.add('fa-bars');
            }
        }
        
        function closeMenu() {
            sidebar.classList.remove('mobile-visible');
            sidebarOverlay.classList.remove('active');
            const icon = mobileMenuToggle.querySelector('i');
            icon.classList.remove('fa-times');
            icon.classList.add('fa-bars');
        }
        
        if (mobileMenuToggle) {
            mobileMenuToggle.addEventListener('click', toggleMenu);
        }
        
        if (sidebarOverlay) {
            sidebarOverlay.addEventListener('click', closeMenu);
        }
        
        navLinks.forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 1200) {
                    closeMenu();
                }
            });
        });
        
        window.addEventListener('resize', () => {
            if (window.innerWidth > 1200) {
                closeMenu();
            }
        });
        
        console.log('Appointments page loaded successfully');
    </script>
</body>
</html>
