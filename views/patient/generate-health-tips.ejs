<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generate Health Tips - Bizil Health Care</title>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
    <link rel="shortcut icon" type="image/png" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/modern-dashboard.css">
    <style>
        body {
            background: #F8FAFC;
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
        }

        .generator-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .generator-card {
            background: white;
            border-radius: 16px;
            padding: 2.5rem;
            margin-bottom: 2rem;
            border: 1px solid #E5E7EB;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        }

        .generator-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .generator-header h1 {
            font-size: 2rem;
            font-weight: 700;
            color: #111827;
            margin-bottom: 0.5rem;
        }

        .generator-header p {
            font-size: 1.125rem;
            color: #6B7280;
        }

        .generator-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #8B5CF6, #3B82F6);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2rem;
            color: white;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control, .form-select {
            padding: 0.875rem 1rem;
            border: 1px solid #D1D5DB;
            border-radius: 10px;
            font-size: 1rem;
            width: 100%;
        }

        .form-control:focus, .form-select:focus {
            border-color: #8B5CF6;
            outline: none;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
        }

        .generate-btn {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, #8B5CF6, #3B82F6);
            color: white;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.0625rem;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .generate-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(139, 92, 246, 0.3);
        }

        .generate-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .loading-spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .result-section {
            display: none;
            margin-top: 2rem;
        }

        .result-card {
            background: #F9FAFB;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            border: 1px solid #E5E7EB;
        }

        .result-success {
            background: #D1FAE5;
            border-color: #A7F3D0;
            color: #065F46;
        }

        .result-error {
            background: #FEE2E2;
            border-color: #FECACA;
            color: #991B1B;
        }

        .tips-list {
            display: grid;
            gap: 1rem;
            margin-top: 1rem;
        }

        .tip-preview {
            background: white;
            padding: 1.25rem;
            border-radius: 10px;
            border: 1px solid #E5E7EB;
        }

        .tip-preview h4 {
            font-size: 1.125rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.5rem;
        }

        .tip-preview p {
            font-size: 0.9375rem;
            color: #6B7280;
            margin-bottom: 0.75rem;
        }

        .tip-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            font-size: 0.8125rem;
        }

        .tip-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            font-weight: 600;
        }

        .badge-category {
            background: linear-gradient(135deg, #8B5CF6, #3B82F6);
            color: white;
        }

        .badge-priority {
            background: #FEF3C7;
            color: #D97706;
        }

        .info-box {
            background: #EEF2FF;
            border: 1px solid #C7D2FE;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .info-box h5 {
            font-size: 1rem;
            font-weight: 600;
            color: #4338CA;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-box p {
            font-size: 0.9375rem;
            color: #4338CA;
            margin: 0;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #6B7280;
            text-decoration: none;
            font-weight: 600;
            margin-bottom: 1.5rem;
            transition: color 0.2s;
        }

        .back-link:hover {
            color: #8B5CF6;
        }
    </style>
</head>
<body>
    <div class="generator-container">
        <a href="/patient/health-tips" class="back-link">
            <i class="fas fa-arrow-left"></i>
            Back to Health Tips
        </a>

        <div class="generator-card">
            <div class="generator-header">
                <div class="generator-icon">
                    <i class="fas fa-brain"></i>
                </div>
                <h1>AI Health Tips Generator</h1>
                <p>Get personalized health recommendations based on your profile</p>
            </div>

            <div class="info-box">
                <h5>
                    <i class="fas fa-info-circle"></i>
                    How It Works
                </h5>
                <p>Our AI analyzes your age, gender, medical history, lifestyle, and health conditions to generate personalized, evidence-based health tips tailored specifically for you.</p>
            </div>

            <form id="generateForm">
                <div class="form-group">
                    <label class="form-label" for="tipCount">
                        <i class="fas fa-list-ol"></i>
                        Number of Tips to Generate
                    </label>
                    <select id="tipCount" name="count" class="form-select">
                        <option value="3">3 Tips</option>
                        <option value="5" selected>5 Tips (Recommended)</option>
                        <option value="7">7 Tips</option>
                        <option value="10">10 Tips</option>
                    </select>
                </div>

                <button type="submit" class="generate-btn" id="generateBtn">
                    <i class="fas fa-magic"></i>
                    <span id="btnText">Generate Personalized Tips</span>
                    <div class="loading-spinner" id="loadingSpinner"></div>
                </button>
            </form>

            <div class="result-section" id="resultSection">
                <div class="result-card result-success" id="successMessage" style="display: none;">
                    <h5 style="margin-bottom: 0.5rem; display: flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-check-circle"></i>
                        Success!
                    </h5>
                    <p style="margin: 0;" id="successText"></p>
                </div>

                <div class="result-card result-error" id="errorMessage" style="display: none;">
                    <h5 style="margin-bottom: 0.5rem; display: flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-exclamation-circle"></i>
                        Error
                    </h5>
                    <p style="margin: 0;" id="errorText"></p>
                </div>

                <div class="tips-list" id="tipsList"></div>

                <div style="text-align: center; margin-top: 1.5rem;">
                    <a href="/patient/health-tips" class="btn btn-primary" style="background: linear-gradient(135deg, #8B5CF6, #3B82F6); border: none; padding: 0.75rem 2rem; border-radius: 10px; font-weight: 600;">
                        <i class="fas fa-eye"></i>
                        View All Health Tips
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const form = document.getElementById('generateForm');
        const generateBtn = document.getElementById('generateBtn');
        const btnText = document.getElementById('btnText');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const resultSection = document.getElementById('resultSection');
        const successMessage = document.getElementById('successMessage');
        const errorMessage = document.getElementById('errorMessage');
        const successText = document.getElementById('successText');
        const errorText = document.getElementById('errorText');
        const tipsList = document.getElementById('tipsList');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            // Show loading state
            generateBtn.disabled = true;
            btnText.textContent = 'Generating...';
            loadingSpinner.style.display = 'block';
            resultSection.style.display = 'none';
            successMessage.style.display = 'none';
            errorMessage.style.display = 'none';
            tipsList.innerHTML = '';

            try {
                const count = document.getElementById('tipCount').value;

                const response = await fetch('/patient/health-tips/generate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ count: parseInt(count) })
                });

                const data = await response.json();

                if (data.success) {
                    // Show success message
                    successText.textContent = data.message;
                    successMessage.style.display = 'block';
                    resultSection.style.display = 'block';

                    // Display tips
                    if (data.tips && data.tips.length > 0) {
                        data.tips.forEach(tip => {
                            const tipCard = document.createElement('div');
                            tipCard.className = 'tip-preview';
                            tipCard.innerHTML = `
                                <h4>${tip.title}</h4>
                                <p>${tip.summary}</p>
                                <div class="tip-meta">
                                    <span class="tip-badge badge-category">${tip.category.replace(/-/g, ' ')}</span>
                                    <span class="tip-badge badge-priority">${tip.priority}</span>
                                    <span style="color: #6B7280;"><i class="fas fa-clock"></i> ${tip.timeToRead} min</span>
                                </div>
                            `;
                            tipsList.appendChild(tipCard);
                        });
                    }
                } else {
                    throw new Error(data.message || 'Failed to generate tips');
                }

            } catch (error) {
                console.error('Error:', error);
                errorText.textContent = error.message || 'An error occurred while generating health tips. Please try again.';
                errorMessage.style.display = 'block';
                resultSection.style.display = 'block';
            } finally {
                // Reset button state
                generateBtn.disabled = false;
                btnText.textContent = 'Generate Personalized Tips';
                loadingSpinner.style.display = 'none';
            }
        });
    </script>
</body>
</html>
