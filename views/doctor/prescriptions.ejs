<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescriptions - Bizil Health Care</title>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
    <link rel="shortcut icon" type="image/png" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/modern-dashboard.css">
    <style>
        body {
            background: #F8FAFC;
            font-family: 'Inter', sans-serif;
        }
        
        /* Mobile Menu Toggle Button */
        .mobile-menu-toggle {
            display: none;
            width: 40px;
            height: 40px;
            border-radius: 0.5rem;
            border: 1px solid #E2E8F0;
            background: white;
            cursor: pointer;
            transition: all 0.3s ease;
            align-items: center;
            justify-content: center;
            pointer-events: auto;
            z-index: 997;
            position: relative;
        }
        
        .mobile-menu-toggle:hover {
            background: #F8FAFC;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        
        .mobile-menu-toggle i {
            font-size: 1.25rem;
            color: #1E293B;
        }
        
        /* Mobile Sidebar Overlay */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 998;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
        }
        
        .sidebar-overlay.active {
            opacity: 1;
            pointer-events: auto;
        }
        
        @media (max-width: 1200px) {
            .mobile-menu-toggle {
                display: flex;
            }
            
            .sidebar-overlay {
                display: none;
            }
            
            .sidebar-overlay.active {
                display: block;
            }
            
            .sidebar {
                position: fixed;
                left: 0;
                top: 0;
                width: 280px;
                z-index: 999;
                height: 100vh;
                z-index: 1000;
                transform: translateX(-100%);
                transition: transform 0.3s ease;
                box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
            }
            
            .sidebar.mobile-visible {
                transform: translateX(0);
            }
        }
        
        .prescription-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
            border: 1px solid #E2E8F0;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }
        
        .prescription-card:hover {
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            transform: translateY(-2px);
        }
        
        .search-filter-bar {
            background: white;
            border-radius: 0.75rem;
            padding: 1rem 1.5rem;
            border: 1px solid #E2E8F0;
            margin-bottom: 1.5rem;
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            align-items: center;
        }
        
        .search-box {
            flex: 1;
            min-width: 250px;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .search-box input {
            border: none;
            outline: none;
            flex: 1;
            font-size: 0.875rem;
        }
        
        .search-box i {
            color: #64748B;
        }
    </style>
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    
    <div class="modern-dashboard">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <i class="fas fa-heartbeat"></i>
                </div>
                <div>
                    <h2 class="sidebar-title">Bizil Health</h2>
                </div>
            </div>
            
            <nav>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/doctor/dashboard" class="nav-link">
                            <i class="fas fa-home nav-icon"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/doctor/appointments" class="nav-link">
                            <i class="fas fa-calendar-alt nav-icon"></i>
                            <span>Appointments</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/doctor/patients" class="nav-link">
                            <i class="fas fa-users nav-icon"></i>
                            <span>My Patients</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/doctor/prescriptions" class="nav-link active">
                            <i class="fas fa-prescription nav-icon"></i>
                            <span>Prescriptions</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/doctor/schedule" class="nav-link">
                            <i class="fas fa-clock nav-icon"></i>
                            <span>Schedule</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/doctor/complete-profile" class="nav-link">
                            <i class="fas fa-user-md nav-icon"></i>
                            <span>My Profile</span>
                        </a>
                    </li>
                    <li class="nav-item" style="margin-top: 2rem;">
                        <a href="/doctor/logout" class="nav-link" style="color: #EF4444;">
                            <i class="fas fa-sign-out-alt nav-icon"></i>
                            <span>Logout</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        
        <!-- Main Content -->
        <main class="main-content">
            <header class="dashboard-header" style="margin-bottom: 2rem;">
                <div class="welcome-section">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <button class="mobile-menu-toggle" id="mobileMenuToggle">
                            <i class="fas fa-bars"></i>
                        </button>
                        <div>
                            <h1 style="margin-bottom: 0.25rem;">Prescriptions</h1>
                            <p style="margin: 0;">View and manage prescriptions</p>
                        </div>
                    </div>
                </div>
                
                <div class="header-actions">
                    <a href="/doctor/prescriptions/new" class="btn-primary">
                        <i class="fas fa-plus"></i>
                        New Prescription
                    </a>
                    
                    <div class="user-profile">
                        <div class="user-avatar" style="background: linear-gradient(135deg, #3B82F6, #8B5CF6);">
                            <%= (profile && profile.firstName) ? profile.firstName.charAt(0).toUpperCase() : 'D' %>
                        </div>
                        <div class="user-info">
                            <div class="user-name">Dr. <%= (profile && profile.firstName) ? (profile.firstName + ' ' + (profile.lastName || '')) : 'Doctor' %></div>
                            <div class="user-role"><%= (profile && profile.specialization) ? profile.specialization : 'Doctor' %></div>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Search and Filter -->
            <div class="search-filter-bar">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" placeholder="Search by patient name, prescription number, or diagnosis...">
                </div>
                
                <select class="form-select" style="width: auto;" id="statusFilter">
                    <option value="all">All Status</option>
                    <option value="active">Active</option>
                    <option value="completed">Completed</option>
                    <option value="expired">Expired</option>
                </select>
            </div>
            
            <!-- Prescriptions List -->
            <div id="prescriptionsList">
                <% if (prescriptions && prescriptions.length > 0) { %>
                    <% prescriptions.forEach(function(prescription) { 
                        const patient = prescription.patient;
                        const prescriptionDate = new Date(prescription.prescriptionDate);
                        const validUntil = new Date(prescription.validUntil);
                        const isExpired = validUntil < new Date();
                        const statusClass = prescription.status;
                    %>
                        <div class="prescription-card" 
                             data-search="<%= (patient ? patient.firstName + ' ' + patient.lastName : '') + ' ' + prescription.prescriptionNumber + ' ' + prescription.diagnosis.primary %>"
                             data-status="<%= prescription.status %>">
                            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                                <div>
                                    <div style="font-weight: 600; color: #1E293B; font-size: 1.125rem; margin-bottom: 0.25rem;">
                                        <%= patient ? patient.firstName + ' ' + patient.lastName : 'Unknown Patient' %>
                                    </div>
                                    <div style="font-size: 0.875rem; color: #64748B;">
                                        <span><i class="fas fa-hashtag"></i> <%= prescription.prescriptionNumber %></span>
                                        <span style="margin-left: 1rem;"><i class="fas fa-user"></i> <%= patient ? patient.patientId : '' %></span>
                                    </div>
                                </div>
                                
                                <span class="status-badge <%= statusClass %>">
                                    <%= prescription.status.charAt(0).toUpperCase() + prescription.status.slice(1) %>
                                </span>
                            </div>
                            
                            <div style="background: #F8FAFC; border-radius: 0.75rem; padding: 1rem; margin-bottom: 1rem;">
                                <div style="font-weight: 600; color: #1E293B; margin-bottom: 0.5rem;">
                                    <i class="fas fa-stethoscope" style="color: #8B5CF6;"></i>
                                    Diagnosis
                                </div>
                                <div style="color: #475569;">
                                    <%= prescription.diagnosis.primary %>
                                </div>
                            </div>
                            
                            <div style="display: flex; gap: 2rem; flex-wrap: wrap; margin-bottom: 1rem;">
                                <div>
                                    <div style="font-size: 0.75rem; color: #64748B; margin-bottom: 0.25rem;">Prescribed On</div>
                                    <div style="font-weight: 500; color: #1E293B;">
                                        <%= prescriptionDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                                    </div>
                                </div>
                                
                                <div>
                                    <div style="font-size: 0.75rem; color: #64748B; margin-bottom: 0.25rem;">Valid Until</div>
                                    <div style="font-weight: 500; color: <%= isExpired ? '#EF4444' : '#10B981' %>;">
                                        <%= validUntil.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                                        <% if (isExpired) { %>
                                            <i class="fas fa-exclamation-circle"></i>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <div>
                                    <div style="font-size: 0.75rem; color: #64748B; margin-bottom: 0.25rem;">Medications</div>
                                    <div style="font-weight: 500; color: #1E293B;">
                                        <%= prescription.medications.length %> items
                                    </div>
                                </div>
                            </div>
                            
                            <div style="display: flex; gap: 0.5rem;">
                                <a href="/doctor/prescriptions/<%= prescription._id %>" class="btn-primary" style="padding: 0.75rem 1.5rem; font-size: 0.875rem;">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                
                                <button class="btn-secondary" style="padding: 0.75rem 1.5rem; font-size: 0.875rem;" onclick="printPrescription('<%= prescription._id %>')">
                                    <i class="fas fa-print"></i> Print
                                </button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="empty-state" style="padding: 4rem 2rem; background: white; border-radius: 1rem;">
                        <i class="fas fa-prescription"></i>
                        <p>No prescriptions found</p>
                        <a href="/doctor/prescriptions/new" class="btn-primary" style="margin-top: 1rem;">
                            <i class="fas fa-plus"></i> Create First Prescription
                        </a>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Mobile menu toggle
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const sidebar = document.querySelector('.sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        
        if (mobileMenuToggle) {
            mobileMenuToggle.addEventListener('click', () => {
                sidebar.classList.toggle('mobile-visible');
                sidebarOverlay.classList.toggle('active');
            });
        }
        
        if (sidebarOverlay) {
            sidebarOverlay.addEventListener('click', () => {
                sidebar.classList.remove('mobile-visible');
                sidebarOverlay.classList.remove('active');
            });
        }
        
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const prescriptionCards = document.querySelectorAll('.prescription-card');
        const statusFilter = document.getElementById('statusFilter');
        
        function filterPrescriptions() {
            const searchTerm = searchInput.value.toLowerCase();
            const statusValue = statusFilter.value;
            
            prescriptionCards.forEach(card => {
                const searchData = card.dataset.search.toLowerCase();
                const cardStatus = card.dataset.status;
                
                const matchesSearch = searchData.includes(searchTerm);
                const matchesStatus = statusValue === 'all' || cardStatus === statusValue;
                
                card.style.display = (matchesSearch && matchesStatus) ? 'block' : 'none';
            });
        }
        
        searchInput.addEventListener('input', filterPrescriptions);
        statusFilter.addEventListener('change', filterPrescriptions);
        
        // Print prescription
        function printPrescription(prescriptionId) {
            window.open(`/doctor/prescriptions/${prescriptionId}/print`, '_blank');
        }
    </script>
</body>
</html>
